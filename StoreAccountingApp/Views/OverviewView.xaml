        </Style>
        <DataTemplate DataType="{x:Type viewmodels:SalesOverviewViewModel}">
            <views:SalesOverviewView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodels:StocksOverviewViewModel}">
            <views:StocksOverviewView />
        </DataTemplate>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        <Style TargetType="StackPanel">
            <Style.Resources>
                <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
            </Style.Resources>
        </Style>

    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto" MinWidth="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <TextBlock
            HorizontalAlignment="Center"
            TextAlignment="Center"
            Style="{StaticResource H1TitleStyle}"
            Grid.Row="0"
            Grid.Column="1"
            FontSize="28"
            Text="Overviews"
            Margin="5"
            Width="500"
            />
        <DockPanel Grid.Column="0" Grid.Row="1">
            <StackPanel 
                DockPanel.Dock="Left"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                MinHeight="600"
                >
                <StackPanel Margin="0 150 0 0">
                    <TextBlock
                        HorizontalAlignment="Center"
                        Grid.Row="0"
                        Grid.Column="0"
                        FontSize="14"
                        Text="General"
                        Padding="5 2"
                        Margin="5"/>
                    <Button
                        Padding="5 2"
                        HorizontalAlignment="Left"
                        Content="Products"
                        MinWidth="120"
                        Margin="5 2.5 5 2.5"
                        IsEnabled="False"
                        />
                </StackPanel>
                <StackPanel x:Name="Admin"
                            Visibility="{Binding IsAdmin, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <TextBlock
                        HorizontalAlignment="Center"
                        Grid.Row="0"
                        Grid.Column="0"
                        FontSize="14"
                        Text="Admin manager"
                        Padding="5 2"
                        Margin="5"/>
                    <Button
                        Padding="5 2"
                        HorizontalAlignment="Left"
                        Content="Users"
                        MinWidth="120"
                        Margin="5 2.5 5 2.5"
                        IsEnabled="false"
                        />
                </StackPanel>
                <StackPanel x:Name="Sale"
                            Visibility="{Binding IsSeller, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <TextBlock
                        HorizontalAlignment="Center"
                        Grid.Row="0"
                        Grid.Column="0"
                        FontSize="14"
                        Text="Sales manager"
                        Padding="5 2"
                        Margin="5"/>
                    <Button
                        Padding="5 2"
                        HorizontalAlignment="Left"
                        Command="{Binding NavigateSalesOverviewCommand}"
                        Content="Sales overview"
                        MinWidth="120"
                        Margin="5 2.5 5 2.5"
                       />
                </StackPanel>
                <StackPanel x:Name="Stock"
                            Visibility="{Binding IsStockManager, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <TextBlock
                        HorizontalAlignment="Center"
                        Grid.Row="0"
                        Grid.Column="0"
                        FontSize="14"
                        Text="Stock manager"
                        Padding="5 2"
                        IsEnabled="False"
                        Margin="5"/>
                    <Button
                        Padding="5 2"
                        HorizontalAlignment="Left"
                        Command="{Binding NavigateStocksOverviewCommand}"
                        Content="Stocks overview"
                        MinWidth="120"
                        Margin="5 2.5 5 2.5"
                        IsEnabled="False"
                        />
                </StackPanel>
                <StackPanel x:Name="People">
                    <TextBlock
                        HorizontalAlignment="Center"
                        Grid.Row="0"
                        Grid.Column="0"
                        FontSize="14"
                        Text="People manager"
                        Padding="5 2"
                        Margin="5"/>
                    <Button
                        Padding="5 2"
                        HorizontalAlignment="Left"
                        Content="Employees overview"
                        MinWidth="120"
                        Margin="5 2.5 5 2.5"
                        IsEnabled="false"
                       />
                </StackPanel>
            </StackPanel>
        </DockPanel>
        <ContentControl
            Grid.Row="1"
            Grid.Column="1"
            MaxWidth="1000"
            Width="auto"
            Grid.ColumnSpan="4"
            Margin="20"
            Content="{Binding OverviewContentViewModel}"
            />
    </Grid>
</UserControl>
