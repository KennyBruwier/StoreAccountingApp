        </Style>
        <DataTemplate DataType="{x:Type viewmodels:SalesOrderViewModel}">
            <views:SalesOrderView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodels:OrdersOrderViewModel}">
            <views:OrdersOrderView />
        </DataTemplate>
        <Style TargetType="TextBlock"
            BasedOn="{StaticResource TextBlockStyle}"/>
        <Style TargetType="ComboBox"
            BasedOn="{StaticResource ElegantComboBoxStyle}"/>
        <Style TargetType="TextBox"
            BasedOn="{StaticResource TextBoxStyle}"/>

    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>

            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <TextBlock
            HorizontalAlignment="Center"
            TextAlignment="Center"
            Grid.Row="0"
            Grid.Column="1"
            FontSize="28"
            Text="Invoices overview"
            Margin="5"
            Width="500"
            />
        <DockPanel Grid.Column="0" Grid.Row="1">
            <StackPanel 
                DockPanel.Dock="Left"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                MinHeight="600"
                >
                <StackPanel Margin="0 150 0 0">
                    <TextBlock
                        HorizontalAlignment="Center"
                        Grid.Row="0"
                        Grid.Column="0"
                        FontSize="14"
                        Text="Sales"
                        Padding="5 2"
                        Margin="5"/>
                    <Button
                        Padding="5 2"
                        HorizontalAlignment="Left"
                        Content="Sales"
                        MinWidth="120"
                        Margin="5 2.5 5 2.5"
                        Command="{Binding NavigateSalesOrderCommand}"
                        />
                </StackPanel>
                <StackPanel x:Name="Admin">
                    <TextBlock
                        HorizontalAlignment="Center"
                        Grid.Row="0"
                        Grid.Column="0"
                        FontSize="14"
                        Text="Purchases"
                        Padding="5 2"
                        Margin="5"/>
                    <Button
                        Padding="5 2"
                        HorizontalAlignment="Left"
                        Content="Orders"
                        MinWidth="120"
                        Margin="5 2.5 5 2.5"
                        Command="{Binding NavigateOrdersOrderCommand}"
                        />
                </StackPanel>
            </StackPanel>
        </DockPanel>
        <ContentControl
            Grid.Row="1"
            Grid.Column="1"
            Width="auto"
            MinWidth="500"
            Height="auto"
            MinHeight="400"
            Margin="20"
            Content="{Binding OrderContentViewModel}"
            />
    </Grid>
</UserControl>
