             xmlns:viewmodels="clr-namespace:StoreAccountingApp.ViewModels.Orders"
             xmlns:views="clr-namespace:StoreAccountingApp.Views"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800"
             Height="auto"
             Width="auto">
